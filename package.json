{
  "name": "mailer_service",
  "version": "1.0.0",
  "description": "standalone service to sending emails",
  "main": "index.js",
  "scripts": {
    "dev": "yarn && NODE_ENV=development ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "cleanup": "rm -rf ./build",
    "build": "yarn cleanup && yarn && tsc --project tsconfig.json",
    "build:npx": "yarn cleanup && yarn && npx tsc --project tsconfig.json"
  },
  "author": "MichalSalek (contact@michalsalek.com)",
  "license": "BSD-1-Clause",
  "dependencies": {
    "@msalek/emails": "latest",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "rollbar": "^2.26.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/node": "^20.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
